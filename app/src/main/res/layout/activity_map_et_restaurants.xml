<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cgodin.qc.ca.myapplication.MapEtRestaurants">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <fragment
        android:name="cgodin.qc.ca.myapplication.FragmentGoogleMap"
        android:id="@+id/fragmentGoogleMap"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintBottom_toTopOf="@+id/btnProfil"/>

    <Button
        android:id="@+id/btnProfil"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Profil"
        app:layout_constraintRight_toLeftOf="@+id/btnFavoris"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:drawableStart="@mipmap/ic_profil_icon"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:id="@+id/btnFavoris"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Favoris"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnProfil"
        app:layout_constraintBottom_toBottomOf="parent"
        style="?android:attr/borderlessButtonStyle"
        android:drawableStart="@mipmap/ic_favorite_icon"/>

</android.support.constraint.ConstraintLayout>
